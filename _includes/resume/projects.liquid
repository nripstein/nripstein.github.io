<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in data[1] %}
    <li class="list-group-item">
      <div class="row">

        {% if content.startDate %}
          <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
            {% assign start = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign ending = content.endDate | default: '' | split: '-' | slice: 0, 2 | join: '.' %}
            {% if ending == '' %}{% assign ending = 'Present' %}{% endif %}
            <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width:75px">
              {{ start }} â€“ {{ ending }}
            </span>
          </div>
          <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
        {% elsif content.badgeImage %}
          <div class="col-md-2 text-center date-column d-none d-md-flex justify-content-center align-items-center">
            {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.1667 }}px, (min-width: 768px) 16.67vw, 0vw{% endcapture %}
            {% include figure.liquid 
              path=content.badgeImage 
              class="cv-badge-image rounded" 
              sizes=sizes 
              alt=content.name 
              loading="lazy" %}
          </div>
          <div class="col-12 col-md-10 mt-2 mt-md-0">
        {% else %}
          <div class="col-xs-10 col-sm-10 col-md-10 
            offset-xs-2 offset-sm-2 offset-md-2 
            mt-2 mt-md-0">
        {% endif %}

          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.name }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size:0.95rem; font-style:italic">
            {{ content.summary }}
          </h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li><span class="item">{{ item }}</span></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
